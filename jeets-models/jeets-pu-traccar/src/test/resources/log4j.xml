<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration
	xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

	<appender name="CONSOLE"
		class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{mm:ss,SSS} %M:%L - %m%n" />
		</layout>
	</appender>

	<appender name="logfile"
		class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="target/${jeets.dbname}.log" />
		<param name="Append" value="false" />
		<param name="MaxFileSize" value="100KB" />
		<param name="MaxBackupIndex" value="1" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%-5p %d{dd-MM HH:mm:ss,SSS} [%c] (%F:%M:%L)  %m%n" />
		</layout>
	</appender>

	<logger name="org.jeets">
		<level value="debug" />
		<appender-ref ref="logfile" />
	</logger>
<!-- 	
	Raise org.hibernate verbosity to help debug errors
	<logger name="org.hibernate">
		<level value="trace" />
		<appender-ref ref="logfile" />
	</logger>
 -->	
	<root>
		<priority value="fatal" />
		<appender-ref ref="CONSOLE" />
	</root>

</log4j:configuration>