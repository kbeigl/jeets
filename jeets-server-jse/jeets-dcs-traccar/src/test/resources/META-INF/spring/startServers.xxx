<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <bean class="org.traccar.Context" id="TraccarContext"/>
    <bean class="org.jeets.routes.DcsRoutesFactory" id="DcsRoutes"/>
    <camelContext id="dcs-traccar" trace="false" xmlns="http://camel.apache.org/schema/spring">
        <route id="Context.init" startupOrder="1">
            <from id="configFile" uri="file:setup/?fileName=traccar.xml&amp;noop=true&amp;initialDelay=0"/>
            <!-- would require Consumer !? <to uri="direct:Context.initialized" /> -->
            <log id="_log1" message="Context.init( ${file:absolute.path} ) ..."/>
            <bean id="initializeFile"
                method="init(${file:absolute.path})" ref="TraccarContext"/>
            <log id="_log2" message="... Context initialized from XML route!"/>
            <bean id="createDcsRoutes" ref="DcsRoutes"/>
            <log id="_log3" message="... created DCS routes from XML!"/>
            <camel:stop id="_stop1"/>
        </route>
    </camelContext>
</beans>
