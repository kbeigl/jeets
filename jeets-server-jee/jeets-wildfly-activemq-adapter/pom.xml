<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
		<groupId>org.jeets</groupId>
		<artifactId>jeets-server-jee</artifactId>
		<version>1.0</version>
    </parent>

    <name>jeets-wildfly-activemq-adapter</name>
    <artifactId>jeets-wildfly-activemq-adapter</artifactId>
    <packaging>war</packaging>

    <properties>
        <!-- skip deployment in default profile -->
        <deploy-rar.skip>true</deploy-rar.skip>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.apache.activemq</groupId>
            <artifactId>activemq-camel</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-cdi</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.enterprise</groupId>
            <artifactId>cdi-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.spec.javax.ejb</groupId>
            <artifactId>jboss-ejb-api_3.2_spec</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <!-- <finalName>${project.artifactId}</finalName> -->
        <plugins>
            <plugin>
                <groupId>org.wildfly.plugins</groupId>
                <artifactId>wildfly-maven-plugin</artifactId>
                <configuration>
                	<!-- set in parent -->
                    <skip>${deploy.skip}</skip>
                </configuration>
                <executions>
                    <execution>
                        <id>deploy-activemq</id>
                        <phase>install</phase>
                        <goals>
                            <goal>deploy-artifact</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.activemq</groupId>
                            <artifactId>activemq-rar</artifactId>
                            <name>activemq-rar.rar</name>
                            <afterDeployment>
                                <scripts>
                                    <script>${project.basedir}/src/main/resources/cli/configure-resource-adapter.cli</script>
                                </scripts>
                            </afterDeployment>
                            <skip>${deploy-rar.skip}</skip>
                        </configuration>
                    </execution>
                    <execution>
                        <id>undeploy-activemq-rar</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>undeploy</goal>
                        </goals>
                        <configuration>
                            <name>activemq-rar.rar</name>
                            <beforeDeployment>
                                <scripts>
                                    <script>${project.basedir}/src/main/resources/cli/unconfigure-resource-adapter.cli</script>
                                </scripts>
                            </beforeDeployment>
                            <skip>${deploy-rar.skip}</skip>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>deploy-amq-rar</id>
            <properties>
                <deploy-rar.skip>false</deploy-rar.skip>
            </properties>
            <dependencies>
                <dependency>
                    <groupId>org.apache.activemq</groupId>
                    <artifactId>activemq-rar</artifactId>
                    <type>rar</type>
                </dependency>
            </dependencies>
        </profile>
    </profiles>
</project>
