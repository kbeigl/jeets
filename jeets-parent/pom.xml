<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.jeets</groupId>
		<artifactId>jeets</artifactId>
		<version>1.0</version>
	</parent>

	<artifactId>jeets-parent</artifactId>
	<packaging>pom</packaging>

	<name>--- JeeTS Parent (versioning etc.) ---</name>
	<description>
		Parent POM to compile and test all JeeTS sources with
		dependencies.
	</description>
	<url>jeets.org/</url>

	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<distribution>repo</distribution>
			<url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
		</license>
	</licenses>

	<prerequisites>
		<maven>3.0</maven>
	</prerequisites>

	<properties>
		<jeets-parent-version>1.0</jeets-parent-version>

		<!-- howtodoinjava.com/maven/maven-parent-child-pom-example/ -->
		<!-- add all JeeTS sub/sub/versions for official release (?) -->
		
		<!-- maven settings -->
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		
		<exec-maven-plugin-version>1.5.0</exec-maven-plugin-version>
		<!-- <build-helper-maven-plugin-version>1.10</build-helper-maven-plugin-version> -->

		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding> -->

		<!-- Adjust with Camel parent with listed versions -->
		<!-- preferably adjust with JEE -->
		<camel.version>2.20.2</camel.version>
		
		<!-- <log4j2.version>2.7</log4j2.version> -->
		<slf4j-version>1.7.22</slf4j-version>
		<commons-logging-version>1.2</commons-logging-version>
		<junit-version>4.12</junit-version>

		<!-- persistence
		<hibernate-version>5.1.10.Final</hibernate-version> -->
		<hibernate-version>5.2.17.Final</hibernate-version>	
		<version.org.hibernate.javax.persistence>1.0.0.Final</version.org.hibernate.javax.persistence>
		<h2database-version>1.3.176</h2database-version>
		<postgresql-version>9.4-1200-jdbc41</postgresql-version>
		
		<!-- network / protocols -->
		<netty-version>4.1.15.Final</netty-version>
        <protobuf-version>3.1.0</protobuf-version>
	</properties>
	
	<!-- Spring BOM first, Camel BOM second -->
	<dependencyManagement>
	   <dependencies>
	     <dependency>
	       <groupId>org.apache.camel</groupId>
	       <artifactId>camel-parent</artifactId>
	       <version>${camel.version}</version>
	       <type>pom</type>
	       <scope>import</scope>
	     </dependency>
	   </dependencies>
	</dependencyManagement>

	<!-- place common builders here !? -->

</project>
