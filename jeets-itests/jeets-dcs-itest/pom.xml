<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.jeets</groupId>
		<artifactId>jeets-itests</artifactId>
		<version>1.3-SNAPSHOT</version>
	</parent>

	<artifactId>jeets-dcs-itest</artifactId>
	<packaging>jar</packaging>

	<name>jeets-dcs-itest</name>
	<url>jeets.org</url>

	<dependencies>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-test</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>${maven-failsafe-plugin-version}</version>
			</plugin>
			<plugin>
				<groupId>org.commonjava.maven.plugins</groupId>
				<artifactId>directory-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>com.bazaarvoice.maven.plugins</groupId>
				<artifactId>process-exec-maven-plugin</artifactId>
				<version>${process-exec-maven-plugin-version}</version>
				<executions>
					<!-- strange: one of the exec ids HAS TO BE 'start-jar' without phase and goal only
									the other runs with phase and goal only. Check parent!! -->
					<execution>
						<id>start-jar</id>
						<configuration>
							<name>jeets-dcs</name>
							<!-- workDir is vital for relative path hidden in traccar.xml (see argument below) -->
							<workingDir>${jeets.repo.directory}/jeets-server-jse/jeets-dcs/</workingDir>
							<waitForInterrupt>false</waitForInterrupt>
							<!-- <healthcheckUrl>http://localhost:8381/healthcheck</healthcheckUrl> -->
							<waitAfterLaunch>10</waitAfterLaunch>
							<!-- try logging client and server to one log file > parse and assert in IT !! -->
							<processLogFile>${project.build.directory}\${project.name}\${dcs-project-latest}.log</processLogFile>
							<arguments>
								<argument>java</argument>
								<argument>-jar</argument>
								<argument>target/${dcs-jar}</argument>
								<argument>./setup/traccar.xml</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>start-device</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>start</goal>
						</goals>
						<configuration>
							<name>jeets-device</name>
							<workingDir>${jeets.repo.directory}/jeets-clients/jeets-device/</workingDir>
							<waitForInterrupt>false</waitForInterrupt>
							<!-- <healthcheckUrl>http://localhost:8381/healthcheck</healthcheckUrl> -->
							<waitAfterLaunch>10</waitAfterLaunch>
							<processLogFile>${project.build.directory}\${project.name}\${device-project-latest}.log</processLogFile>
							<arguments>
								<argument>java</argument>
								<argument>-jar</argument>
								<argument>target/${device-exec-jar}</argument>
							</arguments>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
